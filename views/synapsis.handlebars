<!-- adding the img and card for the picture of the movie as well as the synapsis -->

<div
    class="mt-16 ml-auto mr-auto justify-center text-center text max-w-screen-xl lg:max-w-screen-lg md:max-w-screen-md sm:max-w-screen-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <a href="#">
        <img class="rounded-t-lg" src="/docs/images/blog/image-1.jpg" alt="" />
    </a>
    <div class="p-5">
        <a href="#">
            <h5 id="movieTitle" class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{Title}}
            </h5>
        </a>
        <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{Plot}}</p>
    </div>
</div>

<!-- Chat box -->

<h1 class="Chat">
    <div class="mt-16 border-solid border-2 border-indigo-600">
        <p class="text-4xl font-extrabold text-gray-900 dark:text-white">
        <p>{{username}}</p>
        </p>
    </div>
</h1>

<main class="container mx-auto p-4 rounded-lg shadow">
    <section class="reviewSection bg-gray-900 shadow p-4 rounded">
        <h2 class="text-2xl text-white text-left underline font-bold mb-4">Write a Review</h2>
        <form id="reviewForm" action="/reviews" method="POST" class="bg-gray-900 text-white p-4 rounded">
            {{!-- <div class="mb-4">
                <label for="movieTitle" class="block">Movie Title</label>
                <input type="text" id="movieTitle" name="movieTitle" required class="w-full p-2 border bg-gray-500">
            </div> --}}

            <div class="mb-4">
                <label for="rating" class="block">Rating</label>
                <input type="number" id="rating" name="rating" min="1" max="5" required
                    class="w-full p-2 border rounded bg-gray-500">
            </div>
            <div class="mb-4">
                <label for="reviewText" class="block">Review</label>
                <textarea id="reviewText" name="reviewText" rows="4" required
                    class="w-full p-2 border rounded bg-gray-500"></textarea>
            </div>
            <button id="submitBtn" type="submit"
                class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">Submit Review</button>
        </form>
    </section>
</main>

 <section class="mt-8 bg-gray-50">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {{#each review}}
      <div class="bg-gray-500 shadow p-4 rounded">
        <h3 id="userName" class="text-xl font-semibold mb-2">UserName</h3>
        <p id="movieTitle" class="text-gray-500 mb-4">Movie: {{review.title}}</p>
        <p id="rating" class="mb-2">Rating: {{review.rating}}/5</p>
        <p id="reviewText" class="mb-2">{{reviewText}}</p>
        <p class="text-blue-500 cursor-pointer hover:underline">Read More</p>
      </div>
      {{/each}}
    </div>
  </section>

<footer class="bg-gray-900 text-white p-4 text-center">
